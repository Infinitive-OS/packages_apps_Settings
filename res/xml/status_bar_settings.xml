<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/status_bar_title">

    <!-- Status bar tweaks -->
    <PreferenceCategory
            android:title="@string/status_bar_clock_title">

        <PreferenceScreen
            android:fragment="com.android.settings.slim.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:title="@string/status_bar_clock" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/network_traffic_title">

    <PreferenceScreen
        android:key="network_traffic_settings"
        android:title="@string/network_traffic_title"
        android:fragment="com.android.settings.io.NetworkTrafficSettings" >
    </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/status_bar_notifications_title">

    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="shake_to_clean_notifications"
        android:title="@string/shake_clean_notification"
        android:summary="@string/shake_clean_notification_summary"
        android:defaultValue="false" />

    <PreferenceScreen
        android:key="status_bar_temperature_style"
        android:title="@string/status_bar_temperature_title"
        android:fragment="com.android.settings.io.StatusBarWeather" />

    <!-- Volume Icon Switch -->
    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="show_volume_icon"
        android:title="@string/show_volume_icon_title"
        android:summary="@string/show_volume_icon_summary"
        android:defaultValue="true" />

   <!-- Breathing Notifications -->
    <PreferenceScreen
        android:key="breathing_notifications"
        android:fragment="com.android.settings.io.BreathingNotifications"
        android:title="@string/breathing_notifications_title" />

    <PreferenceScreen
        android:key="carrier_options"
        android:fragment="com.android.settings.io.CarrierLabel"
        android:title="@string/carrier_options" />

    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:persistent="false"
        android:defaultValue="false" />

    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="force_expanded_notifications"
        android:title="@string/notification_force_expand_title"
        android:summary="@string/notification_force_expand_summary"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="status_bar_greeting"
        android:title="@string/status_bar_greeting_title"
        android:summary="@string/status_bar_greeting_summary"
        android:defaultValue="true" />

    <ListPreference
            android:key="status_bar_power_menu"
            android:title="@string/status_bar_power_menu_title"
            android:dialogTitle="@string/status_bar_power_menu_dialog_title"
            android:entries="@array/status_bar_power_menu_entries"
            android:entryValues="@array/status_bar_power_menu_values"
            android:defaultValue="0"
            android:persistent="false" />

    <!-- Status bar Infinitive logo -->
    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="status_bar_infinitive_logo"
        android:title="@string/status_bar_infinitive_logo_title"
        android:summary="@string/status_bar_infinitive_logo_summary" />
    
    <!-- Headset icon switch -->
    <com.android.settings.io.SystemSettingSwitchPreference
        android:key="show_headset_icon"
        android:title="@string/show_headset_icon_title"
        android:summary="@string/show_headset_icon_summary"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="status_bar_ticker"
        android:title="@string/status_bar_ticker_title"
        android:summary="@string/status_bar_ticker_summary"
        android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
